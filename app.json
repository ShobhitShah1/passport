{
  "expo": {
    "name": "passport",
    "slug": "passport",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "passport",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.passport.passwords"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "react-native-edge-to-edge",
        {
          "android": {
            "parentTheme": "Default",
            "enforceNavigationBarContrast": false
          }
        }
      ],
      "expo-secure-store",
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "NotesWidget",
              "label": "Passport Notes",
              "description": "View your secure notes on home screen",
              "minWidth": "4x2",
              "minHeight": "2x2",
              "maxWidth": "4x4",
              "maxHeight": "4x4",
              "targetCellWidth": 4,
              "targetCellHeight": 3,
              "resizeMode": "horizontal|vertical",
              "updatePeriodMillis": 1800000
            },
            {
              "name": "NotesWidgetSmall",
              "label": "Passport Notes Counter",
              "description": "Quick view of your notes count",
              "minWidth": "2x2",
              "minHeight": "2x2",
              "maxWidth": "2x2",
              "maxHeight": "2x2",
              "targetCellWidth": 2,
              "targetCellHeight": 2,
              "resizeMode": "none",
              "updatePeriodMillis": 1800000
            }
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
